
def init(module):
	module.set_name("smpc")
	module.set_description("Simple message passing channel.")

def prepare(module, options):
	module.depends([":utils"])
	return True

def build(env):
	env.copy('src', 'src')
	
	if env[':test']:
		env.copy('test', 'test', ignore=env.ignore_files('main.cpp'))

